<div class="col-md-10 col-md-offset-1">
  <div class="new-play-form">
    <h1>Edit Theatre Showing</h1>

    <%= simple_form_for @play, html: { multipart: true } do |p| %>
      <%= p.file_field :play_img %>
      <%= p.select :category_id, @categories %>
      <%= p.input :title, label: "Play title" %>
      <%= p.input :description %>
      <%= p.input :director %>
      <%= p.button :submit %>
    <% end %>

    <%= link_to "Back", root_path %>
  </div>
</div>