<h1>Edit Theatre Showing</h1>

<%= simple_form_for @play, html: { multipart: true } do |p| %>
  <%= p.select :category_id, @categories %>
  <%= p.input :title, label: "Play title" %>
  <%= p.input :description %>
  <%= p.input :director %>
  <%= p.button :submit %>
<% end %>

<%= link_to "Back", root_path %>